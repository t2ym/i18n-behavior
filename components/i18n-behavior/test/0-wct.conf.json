{
  "plugins": {
    "local": {
      "browsers": [
        "chrome"
      ]
    },
    "sauce": {
      "disabled": false,
      "browsers": [
        {
          "browserName":  "firefox",
          "platform":     "Windows 10"
        },
        {
          "browserName":  "internet explorer",
          "platform":     "Windows 8.1",
          "version":      "11"
        },
        {
          "browserName":  "internet explorer",
          "platform":     "Windows 7",
          "version":      "10"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.9",
          "version":      "7"
        }
      ]
    },
    "istanbul": {
      "dir": "test/coverage-report",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/i18n-behavior.html",
        "**/i18n-attr-repo.html",
        "**/i18n-preference.html"
      ],
      "exclude": [
        "/bower_components/**/*",
        "/test/**/*"
      ]
    }
  }
}
