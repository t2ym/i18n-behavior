{
  "plugins": {
    "local": {
      "browsers": [
        "chrome",
        "firefox"
      ],
      "browserOptions": {
        "chrome": [
          "headless",
          "disable-gpu"
        ],
        "firefox": [
          "--headless"
        ]
      }
    },
    "sauce": {
      "disabled": false,
      "browsers": [
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      "17"
        },
        {
          "browserName":  "internet explorer",
          "platform":     "Windows 8.1",
          "version":      "11"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.13",
          "version":      "12"
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.11",
          "version":      "10"
        }
      ]
    },
    "istanbul": {
      "dir": "test/coverage-report",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/i18n-controller.js",
        "**/i18n-behavior.js",
        "**/i18n-attr-repo.js",
        "**/i18n-preference.js"
      ],
      "exclude": [
        "/node_modules/**/*",
        "/test/**/*"
      ]
    }
  }
}
