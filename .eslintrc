{
    "rules": {
        "indent": [
            2,
            2 
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-irregular-whitespace": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals" : {
        "Polymer": true,
        "BehaviorsStore": true,
        "deepcopy": true
    },
    "plugins" : [
        "html"
    ],
    "extends": "eslint:recommended"
}
